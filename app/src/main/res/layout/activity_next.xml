<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NextActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_set"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Age" />

        <Button
            android:id="@+id/button_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Gender" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_read_single"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_read_single"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_read_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Single"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_read_observe"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_read_observe"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_read_observe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Observe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_query_single"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_query_single"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="" />

        <Button
            android:id="@+id/button_query_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query Single"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_query_observe"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_query_observe"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_query_observe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query Observe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_run_transaction"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_off"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Delete" />

    <Button
        android:id="@+id/button_firestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firestore"/>

    <Button
        android:id="@+id/button_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage"/>

    <Button
        android:id="@+id/button_crush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crush"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Logout" />

</LinearLayout>